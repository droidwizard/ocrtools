<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" >

            <ImageView
                android:id="@+id/iv_invitaionresult_main"
                android:layout_width="wrap_content"
                android:layout_height="260dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:src="@drawable/ic_launcher" />

            <Spinner
                android:id="@+id/spin_invitaionresult_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/edt_invitaionresult_time"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/iv_invitaionresult_main"
                android:layout_marginTop="20dp" />

            <EditText
                android:id="@+id/edt_invitaionresult_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/spin_invitaionresult_content"
                android:ems="10"
                android:inputType="textPersonName" >

                <requestFocus />
            </EditText>

            <EditText
                android:id="@+id/edt_invitation_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/edt_invitaionresult_time"
                android:ems="10"
                android:inputType="textPersonName" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/spin_invitaionresult_content"
                android:layout_alignBottom="@+id/spin_invitaionresult_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="20dp"
                android:text="Nội dung" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/edt_invitaionresult_time"
                android:layout_alignBottom="@+id/edt_invitaionresult_time"
                android:layout_alignLeft="@+id/textView1"
                android:text="Thời gian" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/edt_invitation_location"
                android:layout_alignBottom="@+id/edt_invitation_location"
                android:layout_alignLeft="@+id/textView2"
                android:text="Địa điểm" />

            <Button
                android:id="@+id/btn_invitationresult_save"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/edt_invitation_location"
                android:layout_marginRight="21dp"
                android:text="Save" />

        </RelativeLayout>

    </ScrollView>

</LinearLayout>