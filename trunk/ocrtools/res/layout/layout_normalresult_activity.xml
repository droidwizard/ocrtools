<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:background="@drawable/background">
    <ScrollView
    android:id="@+id/sl_1"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="50dp">
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">  
        
        <Button 
            android:id="@+id/btn_edit_text_result"
            android:layout_width="100dp"
            android:layout_height="48dp"
            android:background="@drawable/button"
            android:textColor="@android:color/white"/>        
       
        <RelativeLayout 
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content">
	        <TextView 
	            android:id="@+id/tv_text_result"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content" 
	            android:background="@drawable/my_button_background_normal"
	            android:textColor="@android:color/white"/>
	        <EditText 
	            android:id="@+id/edt_text_result"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:minLines="7"
	            android:hint=""/>
	     </RelativeLayout>
        
        <EditText 
            android:id="@+id/edt_result_translate"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"   
            android:minLines="7"
            android:hint=""/>          
        
    </LinearLayout>
    
	</ScrollView>
    <Spinner 
            android:id="@+id/sp_translate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"            
            android:entries="@array/language_items"
            android:prompt="@string/language_prompt"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="20dp"/>
        
       <Button 
            android:id="@+id/btn_translate"
            android:layout_width="100dp"
            android:layout_height="48dp"
            android:layout_toRightOf="@+id/sp_translate"
            android:layout_alignParentBottom="true"
            android:text="@string/btn_translate"
            android:background="@drawable/button"
            android:textColor="@android:color/white"/>

</RelativeLayout>